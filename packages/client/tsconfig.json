{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@smiley-face-game/api/*": ["../api/src/*"],
      "@/*": ["./src/*"]
    },
    "rootDirs": ["src"],
  }
}