{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@smiley-face-game/api/src/*": [
        "../../api/src/*"
      ],
      "@server/*": [
        "./src/*"
      ]
    }
  }
}